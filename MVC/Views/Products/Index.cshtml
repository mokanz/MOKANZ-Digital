@model IEnumerable<MOKANZ.Models.ProductModel>

@{
    ViewBag.Title = "Products - MOKANZ Digital Store";
}

<script src="~/Scripts/cart.js"></script>

<h2>Products</h2>
@Html.DropDownList("ddcategory", null, "Select category:", htmlAttributes: new { @class = "form-control", @onchange = "filter(this)" })
<div id="details"></div>
<table class="table" id="tbproducts">
    <tbody>
        <tr>
            <th>
            
            </th>
            <th>
            
            </th>
            <th>
            
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.SImage" />
                </td>
                <td>
                    @Html.ActionLink(@item.ProductName, "Details", new { id = item.ProductID })
                </td>
                <td>
                    NZD @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
                        }
    </tbody>
</table>
